<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:layoutDirection="ltr">

    <Space
        android:id="@+id/topSpacer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lettersButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="حروف"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#2A2D32"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/topSpacer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numbersButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="ارقام"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#2A2D32"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toTopOf="@id/lettersButton"
        app:layout_constraintEnd_toStartOf="@id/lettersButton"
        android:layout_marginEnd="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challengesButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="تحديات"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#2A2D32"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/lettersButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>